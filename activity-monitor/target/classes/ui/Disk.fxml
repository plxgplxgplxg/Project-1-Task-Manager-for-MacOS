<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.plxg.activitymonitor.controller.DiskController">

    <children>

        <VBox spacing="8"
              AnchorPane.topAnchor="0"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0"
              AnchorPane.bottomAnchor="0">

            <padding>
                <Insets top="10" bottom="10" left="10" right="10"/>
            </padding>

            <!-- TABLE VIEW -->
            <TableView fx:id="diskTable" prefHeight="350" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colProcessName" text="Process Name" prefWidth="350"/>
                    <TableColumn fx:id="colBytesWritten" text="Bytes Written" prefWidth="150"/>
                    <TableColumn fx:id="colBytesRead" text="Bytes Read" prefWidth="150"/>
                    <TableColumn fx:id="colPid" text="PID" prefWidth="80"/>
                    <TableColumn fx:id="colUser" text="User" prefWidth="120"/>
                </columns>
            </TableView>

            <Separator/>

            <!-- SUMMARY GRID 3 Ã— 3 -->
            <GridPane hgap="30" vgap="10" prefHeight="150">

                <!-- 3 COLUMNS -->
                <columnConstraints>
                    <ColumnConstraints percentWidth="33.33"/>
                    <ColumnConstraints percentWidth="33.33"/>
                    <ColumnConstraints percentWidth="33.33"/>
                </columnConstraints>

                <!-- 4 ROWS -->
                <rowConstraints>
                    <RowConstraints percentHeight="25"/>
                    <RowConstraints percentHeight="25"/>
                    <RowConstraints percentHeight="25"/>
                    <RowConstraints percentHeight="25"/>
                </rowConstraints>

                <padding>
                    <Insets top="10" bottom="10" left="10" right="10"/>
                </padding>

                <!-- LEFT PANEL -->
                <Label text="Reads in:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label fx:id="lblReadsIn" text="0"
                       GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.halignment="RIGHT"/>

                <Label text="Writes out:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Label fx:id="lblWritesOut" text="0"
                       GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="RIGHT"/>

                <Label text="Reads in/sec:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Label fx:id="lblReadsInSec" text="0" textFill="#5AC8FA"
                       GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.halignment="RIGHT"/>

                <Label text="Writes out/sec:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <Label fx:id="lblWritesOutSec" text="0" textFill="#FF6B6B"
                       GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.halignment="RIGHT"/>


                <!-- CENTER PANEL (CHART) -->
                <Label text="IO" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.halignment="CENTER">
                    <font>
                        <Font name="System Bold" size="14"/>
                    </font>
                </Label>

                <AreaChart fx:id="diskChart"
                           createSymbols="false"
                           legendVisible="false"
                           horizontalGridLinesVisible="false"
                           verticalGridLinesVisible="false"
                           GridPane.columnIndex="1"
                           GridPane.rowIndex="1"
                           GridPane.rowSpan="3">

                    <xAxis>
                        <NumberAxis minorTickVisible="false" side="BOTTOM" tickLabelsVisible="false" tickMarkVisible="false" />
                    </xAxis>

                    <yAxis>
                        <NumberAxis fx:id="yAxis" autoRanging="true" minorTickVisible="false" side="LEFT" tickLabelsVisible="false" tickMarkVisible="false" />
                    </yAxis>

                </AreaChart>


                <!-- RIGHT PANEL -->
                <Label text="Data read:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <Label fx:id="lblDataRead" text="0"
                       GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.halignment="RIGHT"/>

                <Label text="Data written:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <Label fx:id="lblDataWritten" text="0"
                       GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.halignment="RIGHT"/>

                <Label text="Data read/sec:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <Label fx:id="lblDataReadSec" text="0"
                       GridPane.columnIndex="2" GridPane.rowIndex="2" GridPane.halignment="RIGHT"/>

                <Label text="Data written/sec:" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                <Label fx:id="lblDataWrittenSec" text="0"
                       GridPane.columnIndex="2" GridPane.rowIndex="3" GridPane.halignment="RIGHT"/>

            </GridPane>

        </VBox>

    </children>
</AnchorPane>
