            <Insets bottom="3.0" left="10.0" right="10.0" top="4.0" />
         </padding>
         <children>
            <Label fx:id="lblAppTitle" text="Activity Monitor">
               <font>
                  <Font name="System Bold Italic" size="14.0" />
               </font>
            </Label>
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <TextField fx:id="txtSearch" promptText="Search">
               <font>
                  <Font size="10.0" />
               </font>
            </TextField>
         </children>
      </HBox>
   </top>
</BorderPane>
