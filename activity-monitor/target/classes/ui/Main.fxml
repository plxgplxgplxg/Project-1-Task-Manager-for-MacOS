<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>


<BorderPane fx:id="mainRoot" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.plxg.activitymonitor.controller.MainController">
    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>
                <Tab text="CPU">
                    <content>
                        <fx:include fx:id="cpuContent" source="CPU.fxml" />
                    </content>
                </Tab>
                <Tab text="Memory">
                    <content>
                        <fx:include fx:id="memoryContent" source="Memory.fxml" />
                    </content>
                </Tab>
                <Tab text="Energy">
                    <content>
                        <fx:include fx:id="energyContent" source="Energy.fxml" />
                    </content>
                </Tab>
                <Tab text="Disk">
                    <content>
                        <fx:include fx:id="diskContent" source="Disk.fxml" />
                    </content>
                </Tab>
                <Tab text="Network">
                    <content>
                        <fx:include fx:id="networkContent" source="Network.fxml" />
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
    <top>
        <HBox fx:id="headerBar" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="3.0" left="10.0" right="10.0" top="4.0" />
            </padding>
            <children>
                <Label fx:id="lblAppTitle" prefHeight="18.0" prefWidth="107.0" text="Activity Monitor">
                    <font>
                        <Font name="System Bold Italic" size="14.0" />
                    </font>
                </Label>
                <Button fx:id="btnKillProcess" onAction="#onKillProcess" 
                        styleClass="toolbar-icon-btn" 
                        style="-fx-background-color: transparent; -fx-background-radius: 50; -fx-border-color: #888888; -fx-border-radius: 50; -fx-border-width: 1.5; -fx-min-width: 24; -fx-min-height: 24; -fx-max-width: 24; -fx-max-height: 24; -fx-padding: 0; -fx-cursor: hand;" 
                        text="✕" textFill="#888888">
                    <tooltip>
                        <Tooltip text="Kết thúc tiến trình" />
                    </tooltip>
                    <font>
                        <Font size="12.0" />
                    </font>
                </Button>
                <Button fx:id="btnInspectProcess" onAction="#onInspectProcess" 
                        styleClass="toolbar-icon-btn"
                        style="-fx-background-color: transparent; -fx-background-radius: 50; -fx-border-color: #888888; -fx-border-radius: 50; -fx-border-width: 1.5; -fx-min-width: 24; -fx-min-height: 24; -fx-max-width: 24; -fx-max-height: 24; -fx-padding: 0; -fx-cursor: hand;" 
                        text="i" textFill="#888888">
                    <tooltip>
                        <Tooltip text="Xem chi tiết tiến trình" />
                    </tooltip>
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Region prefHeight="20.0" prefWidth="718.0" HBox.hgrow="ALWAYS" />
                <TextField fx:id="txtSearch" prefWidth="150.0" promptText="Search">
                    <font>
                        <Font size="10.0" />
                    </font>
                </TextField>
            </children>
        </HBox>
    </top>
</BorderPane>
